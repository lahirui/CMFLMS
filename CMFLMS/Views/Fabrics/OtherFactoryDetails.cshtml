<p style="color:red"><b>Showing Samples @ViewBag.OtherFactories of @ViewBag.Totcount of Other Factories</b></p>

<div class="row">
    <div class="col-md-12">
        <table id="tblFabric" class="table table-striped table-bordered table-hover table-condensed" style="width:100%" role="grid">
            <thead>
                <tr>
                    <th class="text-center">
                        @Html.DisplayName("Factory")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Product Catagory")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Fabric Id")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Supplier")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Sourcing Route")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Sustainable Product")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Quality")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Composition 1")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Composition 2")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Composition 3")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Composition 4")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Construction")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Yarn Count")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Width(Inches)")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Width(CM)")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Weight")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Price")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Location")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Knit")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Structure")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Colour")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Fabric Catagory")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Finishing Catagory")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Lead Time")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Yarn Guage")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Sourcing Type")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Created Date")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Remarks")
                    </th>
                </tr>
            </thead>
           <tbody>
               @foreach (var item in Model)
            {
                if (ViewBag.OtherFacFab != item.Factories.FactoryName)
                {
                       <tr class="Search">

                           <td>
                               @Html.DisplayFor(modelItem => item.Factories.FactoryName)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.ProdCatagories.ProductCatagoryName)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.FabricId)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Suppliers.SupplierName)
                           </td>
                           <td>
                               @{ var SourcingRoute = (item.SourcingRoute.GetValueOrDefault() ? "GSP" : "NonGSP");}
                               @Html.DisplayFor(modelItem => SourcingRoute)
                           </td>
                           <td>
                               @{ var SustainableProduct = (item.SustainableProduct.GetValueOrDefault() ? "YES" : "NO");}
                               @Html.DisplayFor(modelItem => SustainableProduct)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Quality)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Compisition1)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Compisition2)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Compisition3)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Compisition4)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Constructions.ConstructionType)
                           </td>

                           <td>
                               @Html.DisplayFor(modelItem => item.Yarns.YarnCount)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.WidthInches)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.WidthCm)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Weight)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Price)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Locationss.LocationName)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Knits.KnitType)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Structures.StructureValue)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Colours.ColourName)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.FabCats.FabricCat)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.FinCategory.FinishCat)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.LeadTime)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.YarnGuage)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.SourceTypes.SourcingTypeName)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.AddedDate)
                           </td>
                           <td>
                               @Html.DisplayFor(modelItem => item.Remarks)
                           </td>
                       </tr>
                                       }

                                   }
           </tbody>
        </table>
    </div>
</div>

