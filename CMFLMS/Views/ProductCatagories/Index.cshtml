@model IEnumerable<CMFLMS.Models.Library.ProductCatagory>

@{
    ViewBag.Title = "Index";
}
<br /><br />
<h2>Product Catagories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tblProductCatagory" class="table table-striped table-bordered table-hover table-condensed">
    <thead >
        <tr >
            <th class="text-center">
                @Html.DisplayName("Product Catagory")
            </th>


            <th class="text-center">
                @Html.DisplayName("Action")
            </th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCatagoryName)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductCatagoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductCatagoryId })
                </td>
            </tr>
        }

    </tbody>

</table>

<link href="~/Assets/css/dataTables.semanticui.min.css" rel="stylesheet" />
<link href="~/Assets/css/semantic.min.css" rel="stylesheet" />
<link href="~/Assets/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="~/Assets/js/jquery-3.3.1.min.js"></script>
<script src="~/Assets/js/jquery.dataTables.min.js"></script>
<script src="~/Assets/js/dataTables.semanticui.min.js"></script>
<script src="~/Assets/js/semantic.min.js"></script>

<script>
    $('#tblProductCatagory').DataTable();
</script>

